<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RSSReaderDetails" >
    
    		<TextView
		        android:id="@+id/DetailsTitle"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_centerHorizontal="false"
		        android:layout_marginTop="16dp"
		        android:paddingLeft="20dp"
		        android:paddingRight="20dp"
		        android:text="Title:"
		        android:textSize="15sp"
		        android:textStyle="bold" />
    		
   			<TextView
		        android:id="@+id/DetailsDescription"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignLeft="@+id/DetailsTitle"
		        android:layout_below="@+id/DetailsTitle"
		        android:layout_marginTop="26dp"
		        android:paddingLeft="20dp"
		        android:paddingRight="20dp"
		        android:text="Descripton:"
		        android:textSize="15sp"
		        android:textStyle="bold" />
    

		    <TextView
		        android:id="@+id/DetailsURL"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignLeft="@+id/DetailsDescription"
		        android:layout_below="@+id/DetailsDescription"
		        android:layout_marginTop="27dp"
		        android:paddingLeft="20dp"
		        android:paddingRight="20dp"
		        android:text="URL:"
		        android:textSize="15sp"
		        android:textStyle="bold" />




</RelativeLayout>
